
<div class="emp-profile">
    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary" href="/users">Back</a>
            <div class="profile-img">
                <img src="https://cdn4.iconfinder.com/data/icons/e-commerce-181/512/477_profile__avatar__man_-512.png">
            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                <h5>{{ user.username }}</h5>
                <h4>{{ user.organization }}</h4>

                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="favorites-tab" data-toggle="tab" href="#academics" role="tab">Academics</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="posts-tab" data-toggle="tab" href="#posts" role="tab">Posts</a>
                    </li>
                </ul>
            </div>
        </div>
        {{#if currentUser}}
        <div class="col-md-2">
            <a class="profile-edit-btn" href="/profile/{{user._id}}/manage">Edit Profile</a>
        </div>
        {{/if}}
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="profile-work">
                <p>SOCIAL LINKs</p>
                <a href="{{user.hudl}}">Hudl</a><br/>
                <a href="{{user.twitter}}">Twitter</a><br/>
                <a href="{{user.instagram}}">Instagram</a>
            </div>
        </div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <b>Name</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.firstName}} {{user.lastName}}</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <b>Email</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.email}}</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <b>Organization</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.organization}}</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <b>Graduation Year</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.year}}</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <b>Height</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.height}}</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <b>Weight</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.weight}}</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <b>City</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.city}}</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <b>State</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.state}}</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <b>Highlights</b>
                        </div>
                        <div class="col-md-6">
                            <a href="{{user.highlights}}">Link</a>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                    <div class="column">
                        {{#each user.posts}}
                            <li class="list-group-item">
                                <div class="post">
                                    <div class="post-info">
                                        <div class="post-date">
                                            <span>{{this.createdAt}}</span>
                                        </div>
                                        <h1 class="post-title">{{this.content}}</h1>
                                        <a href="posts/{{this._id}}"class="post-author">{{ this.author.username}}</a>
                                    </div><br>
                                    <b class="total-likes">Likes: {{this.totalLikes}}</b>
                                </div>
                            </li>
                        {{/each}}
                    </div>
                </div>
                <div class="tab-pane fade" id="academics" role="tabpanel" aria-labelledby="academics-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <b>Weighted GPA</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.weightedGpa}}</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <b>Unweighted GPA</b>
                        </div>
                        <div class="col-md-6">
                            <label>{{user.unweightedGpa}}</label>
                        </div>
                        <a class="btn btn-warning" href="/profile/{{user._id}}/manage">Edit GPA</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
