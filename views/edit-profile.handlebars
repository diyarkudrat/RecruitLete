<form method="POST" action="/profile/{{user._id}}/manage?_method=PUT">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputOrganization">Organization</label>
      <input type="text" class="form-control" id="inputOrganization" placeholder="{{user.organization}}">
    </div>
  </div>
  <div class="form-group">
    <label for="inputGradYear">Grad Year</label>
    <input type="text" class="form-control" id="inputGradYear" placeholder="{{user.year}}">
  </div>
  <div class="form-group">
    <label for="inputHeight">Height / Weight</label>
    <input type="text" class="form-control" id="inputHeight">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">City</label>
      <input type="text" class="form-control" id="inputCity">
    </div>
    <div class="form-group col-md-4">
      <label for="inputState">State</label>
      <input type="text" class="form-control" id="inputState">
    </div>
    <div class="form-group col-md-2">
      <label for="inputZip">Zip</label>
      <input type="text" class="form-control" id="inputZip">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>