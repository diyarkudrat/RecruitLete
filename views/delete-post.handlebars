{{#if currentUser}}

<form method="POST" action="/posts/{{post._id}}/delete">
<div>
    <div class="form-group col-md-6">
      <label for="height">Content</label>
      <input type="text" name="height" class="form-control" id="height" value="{{post.content}}">
    </div>
    <div class="form-group col-md-6">
      <label for="weight">URL</label>
      <input type="text" name="weight" class="form-control" id="weight" value="{{post.url}}">
    </div>
  </div>
  <button type="submit" class="btn btn-danger">Delete</button>
</form>

{{/if}}