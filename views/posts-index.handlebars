
{{#if currentUser}}
    <h1 style="text-align: center;">Post Feed!</h1><br>
    <br>
    
        <div class="post-alignment">
            <ul>
                {{#each posts}}
                    <li class="list-group-item">
                        <div class="post">
                            <div class="post-info">
                                <div class="post-date">
                                    <a href="profile/{{this.author._id}}"class="post-author">{{ this.author.username}}</a>
                                </div>
                                <span>{{this.createdAt}}</span><br><br>
                                <a class="post-title" href="posts/{{this._id}}">{{this.content}}</a>
                            <form class="post-like" data-id="{{this._id}}">
                                <button type="submit" class="btn btn-primary">Like</button>
                            </form>
                            <h4 class="total-likes" data-id="{{this._id}}">{{this.totalLikes}}</h4>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
        
